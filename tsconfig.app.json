{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "vite-env.d.ts",
    "src/**/*",
    "src/**/*.ts",
    "src/**/**/*.ts",
    "src/locales/*.json",
    "src/**/*.vue"
  ],
  "exclude": [
    "src/**/__tests__/*"
  ],
  "compilerOptions": {
    "composite": true,
    "noImplicitAny": false,
    "baseUrl": ".",
    "moduleResolution": "node",
    "module": "ESNext",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  }
}